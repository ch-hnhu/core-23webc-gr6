<div class="single-product-area">
	<div class="zigzag-bottom"></div>
	<div class="container">
		<div class="row">
			<!-- Contact Information Section -->
			<div class="col-md-4">
				<div class="contact-info-section">
					<h3 class="section-title">Get in Touch</h3>

					<div class="contact-info-item">
						<div class="contact-info-icon">
							<i class="fa fa-map-marker"></i>
						</div>
						<div class="contact-info-content">
							<h4>Our Address</h4>
							<p>123 Business Street<br>
								City Center, State 12345<br>
								United States</p>
						</div>
					</div>

					<div class="contact-info-item">
						<div class="contact-info-icon">
							<i class="fa fa-phone"></i>
						</div>
						<div class="contact-info-content">
							<h4>Phone Numbers</h4>
							<p>Main: +1 (555) 123-4567<br>
								Support: +1 (555) 123-4568</p>
						</div>
					</div>

					<div class="contact-info-item">
						<div class="contact-info-icon">
							<i class="fa fa-envelope"></i>
						</div>
						<div class="contact-info-content">
							<h4>Email Addresses</h4>
							<p>info@ustora.com<br>
								support@ustora.com</p>
						</div>
					</div>

					<div class="contact-info-item">
						<div class="contact-info-icon">
							<i class="fa fa-clock-o"></i>
						</div>
						<div class="contact-info-content">
							<h4>Business Hours</h4>
							<p>Monday - Friday: 9:00 AM - 6:00 PM<br>
								Saturday: 10:00 AM - 4:00 PM<br>
								Sunday: Closed</p>
						</div>
					</div>

					<div class="contact-social-links">
						<h4>Follow Us</h4>
						<div class="social-icons">
							<a href="#" class="social-icon"><i class="fa fa-facebook"></i></a>
							<a href="#" class="social-icon"><i class="fa fa-twitter"></i></a>
							<a href="#" class="social-icon"><i class="fa fa-instagram"></i></a>
							<a href="#" class="social-icon"><i class="fa fa-linkedin"></i></a>
						</div>
					</div>
				</div>
			</div>

			<!-- Contact Form Section -->
			<div class="col-md-8">
				<div class="contact-form-section">
					<div class="woocommerce-info">
						<h3 class="section-title">Send us a Message</h3>
						<p class="contact-form-intro">
							Have questions about our products or need assistance? We'd love to hear from you.
							Fill out the form below and our team will get back to you within 24 hours.
						</p>

						<form action="#" method="post" class="checkout contact-form">
							<div id="customer_details" class="col2-set">
								<div class="col-1">
									<div class="woocommerce-billing-fields">
										<div class="form-row-group">
											<p class="form-row form-row-first validate-required">
												<label for="first_name">First Name <abbr title="required"
														class="required">*</abbr></label>
												<input type="text" value="" placeholder="Enter your first name"
													id="first_name" name="first_name" class="input-text" required>
											</p>

											<p class="form-row form-row-last validate-required">
												<label for="last_name">Last Name <abbr title="required"
														class="required">*</abbr></label>
												<input type="text" value="" placeholder="Enter your last name"
													id="last_name" name="last_name" class="input-text" required>
											</p>
										</div>

										<div class="clear"></div>

										<div class="form-row-group">
											<p class="form-row form-row-first validate-required validate-email">
												<label for="email">Email Address <abbr title="required"
														class="required">*</abbr></label>
												<input type="email" value="" placeholder="your.email@example.com"
													id="email" name="email" class="input-text" required>
											</p>

											<p class="form-row form-row-last validate-phone">
												<label for="phone">Phone Number</label>
												<input type="tel" value="" placeholder="+1 (555) 123-4567" id="phone"
													name="phone" class="input-text">
											</p>
										</div>

										<div class="clear"></div>

										<p class="form-row form-row-wide">
											<label for="subject">Subject <abbr title="required"
													class="required">*</abbr></label>
											<select id="subject" name="subject" class="input-text" required>
												<option value="">Please select a subject</option>
												<option value="general">General Inquiry</option>
												<option value="product">Product Question</option>
												<option value="order">Order Support</option>
												<option value="technical">Technical Support</option>
												<option value="billing">Billing Question</option>
												<option value="other">Other</option>
											</select>
										</p>

										<p class="form-row notes">
											<label for="message">Your Message <abbr title="required"
													class="required">*</abbr></label>
											<textarea cols="5" rows="6"
												placeholder="Please tell us how we can help you..." id="message"
												class="input-text" name="message" required></textarea>
										</p>

										<div class="contact-form-footer">
											<div class="form-privacy-notice">
												<label class="checkbox-label">
													<input type="checkbox" name="privacy_policy" required>
													<span class="checkmark"></span>
													I agree to the <a href="#" target="_blank">Privacy Policy</a> and <a
														href="#" target="_blank">Terms of Service</a> <abbr
														title="required" class="required">*</abbr>
												</label>
											</div>

											<div class="form-newsletter">
												<label class="checkbox-label">
													<input type="checkbox" name="newsletter" value="1">
													<span class="checkmark"></span>
													Subscribe to our newsletter for updates and special offers
												</label>
											</div>

											<p class="form-row form-submit">
												<button type="submit" class="button alt">
													<i class="fa fa-paper-plane"></i> Send Message
												</button>
												<button type="reset" class="button">
													<i class="fa fa-refresh"></i> Reset Form
												</button>
											</p>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


@{
	<h2>Danh sách sản phẩm</h2>
	<table>
		<thead>
			<tr>
				<th>Mã sản phẩm</th>
				<th>Tên sản phẩm</th>
				<th>Mã danh mục</th>
				<th>Giá</th>
				<th>Giá khuyến mãi</th>
				<th>Số lượng tồn kho</th>
				<th>Hình ảnh</th>
				<th>Mô tả</th>
				<th>Trạng thái</th>
				<th>Ngày tạo</th>
				<th>Ngày cập nhật</th>
				<th>Chi tiết</th>
			</tr>
		</thead>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.ProductID</td>
				<td>@product.ProductName</td>
				<td>@product.CategoryID</td>
				<td>@product.Price.ToString()</td>
				<td>@product.DiscountPercentage.ToString()</td>
				<td>@product.Stock.ToString()</td>
				<td>
					<img src="@product.Image" alt="@product.ProductName" width="100" />
				</td>
				<td>@product.Description</td>
				<td>@product.Status.ToString()</td>
				<td>@product.CreatedAt.ToString("dd/MM/yyyy")</td>
				<td>@product.UpdatedAt.ToString("dd/MM/yyyy")</td>
				<td>| <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductID">Xem chi tiết</a></td>
			</tr>
		}

	</table>
}






@model Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var area = ViewData["Area"] as string ?? "";// kiểm tra gọi từ Admin hay Public PNSon thêm 4/10/2024
}
    <h2>Chi tiết sản phẩm</h2>
    <div>
        <img src="@Model.HinhAnh" alt="@Model.TenSP" width="300" />
    </div>
    <div>
        <h3>@Model.TenSP</h3>
        <p><strong>Giá:</strong> @Model.DonGia.ToString("C")</p>
        <p><strong>Giá khuyến mãi:</strong> @Model.DonGiaKhuyenMai.ToString("C")</p>
        <p><strong>Mô tả:</strong> @Model.MoTa</p>
        <p><strong>Loại sản phẩm:</strong> @Model.LoaiSP</p>
        <p>
        <a asp-area="@area" asp-controller="Product" asp-action="Index">Quay lại danh sách sản phẩm</a>
        </p>
    </div>

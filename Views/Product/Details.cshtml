@model Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var area = ViewData["Area"] as string ?? "";// kiểm tra gọi từ Admin hay Public PNSon thêm
}
<h2>Chi tiết sản phẩm</h2>
<div>
    <img src="@Model.Image" alt="@Model.ProductName" width="300" />
</div>
<div>
    <h3>@Model.ProductName</h3>
    <p><strong>Giá:</strong> @Model.Price.ToString("C")</p>
    <p><strong>Giá khuyến mãi:</strong> @Model.DiscountPercentage.ToString("C")</p>
    <p><strong>Mô tả:</strong> @Model.Description</p>
    <p><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
    <p><strong>Ngày cập nhật:</strong> @Model.UpdatedAt.ToString("yyyy-MM-dd")</p>
    <p>
        <a asp-area="@area" asp-controller="Product" asp-action="Index">Quay lại danh sách sản phẩm</a>
    </p>
</div>
//PNSon thêm asp-area="area" để quay lại đúng area gọi đến






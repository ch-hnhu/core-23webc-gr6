@model List<core_group_ex_01.Models.User>
@{
    ViewData["Title"] = "Danh sách người dùng";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">@ViewData["Title"]</h1>
            
            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-users"></i> 
                            Tổng số người dùng: @Model.Count
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">STT</th>
                                        <th scope="col">Tên đăng nhập</th>
                                        <th scope="col">Mật khẩu</th>
                                        <th scope="col">Vai trò</th>
                                    
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <th scope="row">@(i + 1)</th>
                                            <td>
                                                <strong>@Model[i].Username</strong>
                                            </td>
                                            <td>
                                                <span>@Model[i].Password</span>
                                            </td>
                                            <td>
                                                <span>@Model[i].Role</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">Không có dữ liệu!</h4>
                    <p>Hiện tại chưa có người dùng nào trong hệ thống.</p>
                    <hr>
                    <p class="mb-0">Vui lòng kiểm tra lại file dữ liệu hoặc thêm người dùng mới.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .badge {
        font-size: 0.875em;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }
</style>

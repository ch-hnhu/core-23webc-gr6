<div class="maincontent-area"></div> <!--VqNam 4/10/2025 -->

<div class="zigzag-bottom"></div>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="latest-product">
				<h2 class="section-title">Latest Products</h2>
				<div class="product-carousel">
					@{
						int index = 1; // đếm số thứ tự ảnh
					}
					@foreach (var item in Model)
					{
						var imgFile = $"product-{index}.jpg";
						<div class="single-product">
							<div class="product-f-image">
								<img src="~/assets/user/img/@imgFile" alt="@item.ProductName" />

								<div class="product-hover">
									<a href="#" class="add-to-cart-link">
										<i class="fa fa-shopping-cart"></i> Add to cart
									</a>
									<a href="single-product.html" class="view-details-link">
										<i class="fa fa-link"></i> See details
									</a>
								</div>
							</div>

							<h2><a href="single-product.html">@item.ProductName</a></h2>

							<div class="product-carousel-price">
								<ins>@item.DiscountPercentage.ToString("C0")</ins>
								@if (item.DiscountPercentage < item.Price)
								{
									<del>@item.Price.ToString("C0")</del>
								}
							</div>
						</div>
						index++;
					}
				</div>
			</div>
		</div>
	</div>
</div>
</div>
</div>
</div> <!-- End main content area --><!-- End VqNam 4/10/2025 -->


@model ErrorViewModel
@{
	ViewData["Title"] = "Lỗi";
}

<div class="maincontent-area">
	<div class="zigzag-bottom"></div>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="text-center" style="padding: 60px 0;">
					<i class="fa fa-exclamation-triangle" aria-hidden="true"
						style="font-size: 64px; color: #e74c3c;"></i>
					<h1 style="margin-top: 15px;">Đã xảy ra lỗi</h1>
					<p class="lead" style="margin: 10px 0 20px; color: #555;">
						@(ViewBag.Message ?? "URL không hợp lệ hoặc trang bạn tìm không tồn tại.")
					</p>

					@if (Model?.ShowRequestId == true)
					{
						<p style="color:#888;">Mã yêu cầu: <code>@Model.RequestId</code></p>
					}

					<div style="margin-top: 25px;">
						<a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="margin-right:10px;">
							<i class="fa fa-home"></i> Về trang chủ
						</a>
						<a href="javascript:history.back()" class="btn btn-default">
							<i class="fa fa-arrow-left"></i> Quay lại
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Style {
	<style>
		.btn.btn-default {
			background: #f5f5f5;
			border: 1px solid #ddd;
			color: #333;
		}

		.btn.btn-default:hover {
			background: #eee;
		}
	</style>
}
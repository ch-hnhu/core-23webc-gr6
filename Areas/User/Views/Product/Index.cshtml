@model List<string>
@{
    // Lấy thông tin trang hiện tại và tổng số trang từ ViewData
    int currentPage = ViewData["CurrentPage"] as int? ?? 1;
    int totalPages = ViewData["TotalPages"] as int? ?? 1;
}

<!-- CHNhu --> <!-- //VqNam 4/10/2025-->
<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var img in Model)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="single-shop-product">
                            <div class="product-upper">
                                <img src="~/assets/user/img/@img" alt="@img" style="width:100%; height:250px; object-fit:cover;" />
                            </div>
                            <h2><a href="#">@System.IO.Path.GetFileNameWithoutExtension(img)</a></h2>
                            <div class="product-carousel-price">
                                <ins>$899.00</ins> <del>$999.00</del>
                            </div>  
                            <div class="product-option-shop">
                                <a class="add_to_cart_button" href="#">Add to cart</a>
                            </div>                       
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-12">
                    <p>Không có sản phẩm nào.</p>
                </div>
            }
        </div>
        
        <!-- Pagination -->
        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <!-- Nút Previous -->
                            <li class="@(currentPage == 1 ? "disabled" : "")">
                                <a href="@Url.Action("Index", new { page = currentPage - 1 })" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <!-- Các số trang -->
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="@(i == currentPage ? "active" : "")">
                                    <a href="@Url.Action("Index", new { page = i })">@i</a>
                                </li>
                            }

                            <!-- Nút Next -->
                            <li class="@(currentPage == totalPages ? "disabled" : "")">
                                <a href="@Url.Action("Index", new { page = currentPage + 1 })" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>                        
                </div>
            </div>
        </div>
    </div>
</div>
<!-- endCHNhu -->

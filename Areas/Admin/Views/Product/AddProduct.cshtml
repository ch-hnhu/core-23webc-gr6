@model Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<!-- PNSon -->
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Tiêu đề trang -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm sản phẩm</h1>
            </div>
        </div>

        <!-- Form thêm sản phẩm -->
        <div class="row">
            <div class="col-lg-8">
                <form asp-action="AddProduct" asp-controller="Product" asp-area="Admin"
                      method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="MaSP">Mã sản phẩm</label>
                        <input asp-for="MaSP" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label for="TenSP">Tên sản phẩm</label>
                        <input asp-for="TenSP" class="form-control" />
                        <span asp-validation-for="TenSP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="DonGia">Đơn giá</label>
                        <input asp-for="DonGia" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DonGia" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="DonGiaKhuyenMai">Giá khuyến mãi</label>
                        <input asp-for="DonGiaKhuyenMai" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DonGiaKhuyenMai" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="LoaiSP">Loại sản phẩm</label>
                        <input asp-for="LoaiSP" class="form-control" />
                        <span asp-validation-for="LoaiSP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="MoTa">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="HinhAnhFile">Hình ảnh</label>
                        <input type="file" name="HinhAnhFile" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-success">💾 Lưu sản phẩm</button>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index"
                       class="btn btn-default">↩ Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- endPNSon -->

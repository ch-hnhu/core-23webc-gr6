@model Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<!-- PNSon 8/10/2025 Không chỉnh sửa để làm form giả test chức năng (sửa sau)-->
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Tiêu đề trang -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm sản phẩm</h1>
            </div>
        @* Form thêm sản phẩm, sử dụng enctype để upload file *@
        <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Mã SP</label>
                @* Trường mã sản phẩm, chỉ đọc *@
                <input asp-for="ProductID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Tên SP</label>
                @* Tên sản phẩm, bắt buộc nhập *@
                <input asp-for="ProductName" class="form-control" required type="text"/>
            </div>
            <div class="form-group">
                <label>Đơn Giá</label>
                @* Đơn giá, chỉ nhận số, tối thiểu 1 *@
                <input asp-for="Price" class="form-control" required type="number" min="1" />
            </div>
            <div class="form-group">
                <label>Đơn Giá Khuyến Mãi</label>
                @* Đơn giá khuyến mãi, chỉ nhận số, tối thiểu 0 *@
                <input asp-for="DiscountPercentage" class="form-control" required type="number" min="0" />
            </div>
            <div class="form-group">
                <label>Số lượng tồn kho</label>
                @* Đơn giá khuyến mãi, chỉ nhận số, tối thiểu 0 *@
                <input asp-for="Stock" class="form-control" required type="number" min="0" />
            </div>
            <div class="form-group">
                <label>Hình Ảnh</label>
                @* Trường upload file ảnh *@
                <input type="file" name="HinhAnhFile" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
                @* Nếu đã có ảnh, hiển thị tên file và ảnh *@
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <input asp-for="Image" class="form-control mt-2" readonly />
                    <img src="~/img/@Model.Image" alt="Ảnh sản phẩm" style="max-width:120px;margin-top:10px;" />
                }
            </div>
            <div class="form-group">
                <label>Mô Tả</label>
                @* Mô tả sản phẩm *@
                <input asp-for="Description" class="form-control" required type="text" />
            </div>
            <div class="form-group">
                <label>Trạng thái</label>
                @* Đơn giá khuyến mãi, chỉ nhận số, tối thiểu 0 *@
                <input asp-for="Status" class="form-control" required type="number" min="0" />
            </div>
            <div class="form-group">
                <label>Ngày tạo</label>
                @* Đơn giá khuyến mãi, chỉ nhận số, tối thiểu 0 *@
                <input asp-for="CreatedAt" class="form-control" required type="date" min="0" />
            </div>
            <div class="form-group">
                <label>Ngày cập nhật</label>
                @* Đơn giá khuyến mãi, chỉ nhận số, tối thiểu 0 *@
                <input asp-for="UpdatedAt" class="form-control" required type="date" min="0" />
            </div>
            @* Nút submit và quay lại danh sách *@
            <button type="submit" class="btn btn-success">Thêm sản phẩm</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Product", new { area = "Admin" })">Quay lại</a>
        </form>
    </div>
</div>
<!-- endPNSon -->
